<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.isparks.dao.mybatis.mapper.JournalMapper">

    <sql id="table">journal</sql>

    <sql id="selectAll">
        SELECT id,create_time,modify_time,content FROM
        <include refid="table"/>
    </sql>

    <resultMap id="resultMap" type="app.isparks.core.pojo.entity.Journal">
        <id property="id" column="id"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
        <result column="content" property="content"/>
    </resultMap>

    <!-- 新增数据 -->
    <insert id="insert">
        INSERT INTO<include refid="table"/>(
        <if test="content != null and content != ''">content,</if>
        id,create_time,modify_time,status
        )VALUES(
        <if test="content != null and content != ''">#{content},</if>
        #{id},#{createTime},#{modifyTime},#{status}
        )

    </insert>

    <!-- 根据 id 删除 -->
    <delete id="deleteById">
        DELETE FROM
        <include refid="table"/>
        WHERE id = #{id}
    </delete>

    <delete id="deleteByCond">
        DELETE FROM
        <include refid="table"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="content != null and content != ''">
                AND content = #{content}
            </if>
        </where>
    </delete>


    <!-- 查找所有数据 -->
    <select id="selectAll" resultMap="resultMap" resultType="list">
        <include refid="selectAll"/>
        ORDER BY create_time DESC
    </select>

    <!-- 统计日志数量 -->
    <select id="countByCond" resultType="int">
        SELECT count(1) FROM
        <include refid="table"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="content != null and content != ''">
                AND content = #{content}
            </if>
        </where>
    </select>

    <!-- 根据条件查找 -->
    <select id="selectByCond" resultMap="resultMap" resultType="list">
        <include refid="selectAll"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="content != null and content != ''">
                AND content = #{content}
            </if>
        </where>
    </select>

    <!-- 根据条件更新 -->
    <update id="updateById">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="content != null and content != ''">content = #{content} ,</if>
            <if test="status != null">status = #{status} ,</if>
            modify_time = #{modifyTime}
        </set>
        WHERE
        id = #{id}
    </update>

</mapper>