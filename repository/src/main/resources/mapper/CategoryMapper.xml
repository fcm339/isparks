<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.isparks.dao.mybatis.mapper.CategoryMapper">

    <sql id="table">
        category
    </sql>

    <sql id="selectAll">
        SELECT id,name,description,parent_id,create_time,modify_time
        FROM
        <include refid="table"/>
    </sql>

    <sql id="count">
        SELECT count(1)
        <include refid="table"/>
    </sql>

    <!-- mapper -->
    <resultMap id="BaseMapper" type="app.isparks.core.pojo.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <!-- 新增 -->
    <insert id="insert">
        INSERT INTO
        <include refid="table"/>
        (
        <if test="name != null and name != ''">name,</if>
        <if test="description != null and description != ''">description,</if>
        id,create_time,modify_time,status
        )
        VALUES
        (
        <if test="name != null and name != ''">#{name},</if>
        <if test="description != null and description != ''">#{description},</if>
        #{id},#{createTime},#{modifyTime},#{status}
        )
    </insert>

    <!-- 删除  -->
    <delete id="deleteByName">
        DELETE FROM
        <include refid="table"/>
        WHERE name = #{name}
        ORDER BY modify_time DESC
    </delete>
    <delete id="deleteById">
        DELETE FROM
        <include refid="table"/>
        WHERE id = #{id}
    </delete>

    <delete id="deleteByCond">
        DELETE FROM
        <include refid="table"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="description != null and description != ''">
                AND description = #{description}
            </if>
        </where>
    </delete>

    <!-- 更新 -->
    <update id="updateById">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="name != null and name != ''">name = #{name} ,</if>
            <if test="description != null and description != ''">description = #{description} ,</if>
            <if test="parentId != null and parentId != ''">parent_id = #{parentId} ,</if>
            <if test="status != null and status != ''">status = #{status} ,</if>
            modify_time = #{modifyTime}
        </set>
        WHERE
        id = #{id}
    </update>

    <!-- 查找 -->
    <select id="selectAll" resultMap="BaseMapper">
        <include refid="selectAll"/>
    </select>
    <select id="selectById" resultMap="BaseMapper">
        <include refid="selectAll"/>
        WHERE id = #{id}
    </select>
    <select id="selectByName" resultMap="BaseMapper">
        <include refid="selectAll"/>
        WHERE name = #{name}
        ORDER BY modify_time DESC
    </select>

    <!-- 根据条件查找 -->
    <select id="selectByCond" resultMap="BaseMapper" resultType="list">
        <include refid="selectAll"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="description != null and description != ''">
                AND description = #{description}
            </if>
        </where>
        ORDER BY modify_time DESC
    </select>

    <select id="countByCond" resultType="long">
        <include refid="count"/>
        <where>
            <if test="id != null and id != ''">
                AND id = #{id}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="createTime != null">
                AND create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                AND modify_time = #{modifyTime}
            </if>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="description != null and description != ''">
                AND description = #{description}
            </if>
        </where>
    </select>


</mapper>